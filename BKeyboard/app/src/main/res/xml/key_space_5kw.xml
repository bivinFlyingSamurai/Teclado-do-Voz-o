<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:latin="http://schemas.android.com/apk/res-auto">
    <switch>
        <case
            latin:keyboardLayoutSet="bengali_akkhor|farsi|kannada|nepali_romanized|nepali_traditional|telugu"
            latin:languageSwitchKeyEnabled="true">
            <Key latin:keyStyle="languageSwitchKeyStyle" />
            <Key
                latin:keyStyle="spaceKeyStyle"
                latin:keyWidth="35%p" />
            <Key latin:keyStyle="zwnjKeyStyle" />
        </case>
        <case
            latin:keyboardLayoutSet="bengali_akkhor|farsi|kannada|nepali_romanized|nepali_traditional|telugu"
            latin:languageSwitchKeyEnabled="false">
            <Key
                latin:keyStyle="spaceKeyStyle"
                latin:keyWidth="35%p" />
            <Key latin:keyStyle="zwnjKeyStyle" />
        </case>
        <case latin:languageSwitchKeyEnabled="true">
            <Key latin:keyStyle="languageSwitchKeyStyle" />
            <Key
                latin:keyStyle="spaceKeyStyle"
                latin:keyWidth="35%p" />
        </case>
        <!-- languageSwitchKeyEnabled="false" -->
        <default>
            <Key
                latin:keyStyle="spaceKeyStyle"
                latin:keyWidth="45%p" />
        </default>
    </switch>
</merge>
